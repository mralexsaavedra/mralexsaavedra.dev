---
import Layout from '../layouts/Layout.astro'
import ExternalLink from '../components/ExternalLink.astro'
import GitHubIcon from '../components/icons/GitHub.astro'
import TwitterIcon from '../components/icons/Twitter.astro'
import LinkedInIcon from '../components/icons/LinkedIn.astro'
import MailIcon from '../components/icons/Mail.astro'

import Section from '../components/Section.astro'
import Experience from '../components/Experience.astro'
import Skills from '../components/Skills.astro'
---

<Layout>
  <div
    class='flex flex-col justify-center min-h-[60vh] gap-12 max-w-2xl mx-auto'
  >
    <header class='space-y-6'>
      <h1 class='text-4xl sm:text-5xl font-bold tracking-tight text-foreground'>
        Alex Saavedra
      </h1>
      <div
        class='space-y-4 text-lg sm:text-xl text-muted-foreground leading-relaxed'
      >
        <p>
          Ingeniero de Software Senior enfocado en la <span
            class='text-foreground font-medium'>experiencia de usuario</span
          > y el <span class='text-foreground font-medium'
            >minimalismo digital</span
          >.
        </p>
        <p>
          He liderado el desarrollo frontend en empresas como <span
            class='text-foreground'>Lookiero</span
          > y <span class='text-foreground'>Kira Health</span>, creando
          interfaces escalables y accesibles. Mi enfoque combina la precisión
          técnica con un diseño limpio.
        </p>
      </div>
    </header>

    <div class='space-y-2'>
      <h2
        class='text-sm font-semibold uppercase tracking-wider text-muted-foreground'
      >
        Toolkit
      </h2>
      <Skills />
    </div>

    <footer class='flex items-center gap-6 pt-4'>
      <ExternalLink
        href='https://github.com/mralexsaavedra'
        label='GitHub'
        class='text-muted-foreground hover:text-foreground transition-colors font-medium'
      >
        GitHub
      </ExternalLink>
      <ExternalLink
        href='https://www.linkedin.com/in/mralexsaavedra'
        label='LinkedIn'
        class='text-muted-foreground hover:text-foreground transition-colors font-medium'
      >
        LinkedIn
      </ExternalLink>
      <ExternalLink
        href='https://twitter.com/mralexsaavedra'
        label='Twitter'
        class='text-muted-foreground hover:text-foreground transition-colors font-medium'
      >
        Twitter
      </ExternalLink>
    </footer>
  </div>
</Layout>
