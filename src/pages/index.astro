---
import { Image } from 'astro:assets'
import Skills from '../components/skills/Skills.astro'
import Layout from '../layouts/Layout.astro'
import Experiences from '../components/experiences/Experiences.astro'
import ExternalLink from '../components/ExternalLink.astro'
import GitHub from '../components/icons/GitHub.astro'
import Twitter from '../components/icons/Twitter.astro'
import LinkedIn from '../components/icons/LinkedIn.astro'
import Avatar from '../assets/avatar.jpg'
import GithubRepos from '../components/GithubRepos.astro'
---

<Layout title='Welcome to Astro.'>
  <div
    class='flex flex-col justify-center items-start max-w-2xl border-gray-200 dark:border-gray-700 mx-auto pb-16'
  >
    <div class='flex flex-col-reverse sm:flex-row items-start'>
      <div class='flex flex-col pr-8'>
        <h1
          class='font-bold text-3xl md:text-5xl tracking-tight mb-1 text-black dark:text-white'
        >
          Alexander Saavedra
        </h1>
        <h2 class='text-gray-700 dark:text-gray-200 mb-4'>
          Front-end Engineer en {' '}
          <ExternalLink href='https://lookiero.es/'>
            <span class='font-semibold dark:text-white'>Lookiero</span>
          </ExternalLink>
        </h2>
        <p class='text-gray-600 dark:text-gray-400 mb-5'>
          Especializado en el ecosistema de JavaScript. Amante de las buenas
          pr√°cticas y del software de calidad.
        </p>
        <div class='flex gap-5 mb-16'>
          <ExternalLink href='https://github.com/mralexsaavedra'>
            <GitHub width={30} height={30} class='fill-black dark:fill-white' />
          </ExternalLink>
          <ExternalLink href='https://twitter.com/mralexsaavedra'>
            <Twitter
              width={30}
              height={30}
              class='fill-black dark:fill-white'
            />
          </ExternalLink>
          <ExternalLink href='https://www.linkedin.com/in/mralexsaavedra'>
            <LinkedIn
              width={30}
              height={30}
              class='fill-black dark:fill-white'
            />
          </ExternalLink>
        </div>
      </div>
      <div class='w-[80px] sm:w-[300px] relative mb-8 sm:mb-0 mr-auto'>
        <Image
          alt='Alexander Saavedra'
          height={300}
          width={300}
          src={Avatar}
          class='rounded-full object-cover'
        />
      </div>
    </div>

    <GithubRepos />
    <Skills />
    <Experiences />
  </div>
</Layout>
