---
interface Skill {
  readonly title: string
}

const SKILLS: Skill[] = [
  { title: 'HTML' },
  { title: 'CSS' },
  { title: 'JavaScript' },
  { title: 'TypeScript' },
  { title: 'React' },
  { title: 'Next.js' },
  { title: 'Node' },
  { title: 'Tailwind' },
  { title: 'GraphQL' },
  { title: 'Jest' },
  { title: 'Cypress' },
  { title: 'Astro' },
  { title: 'Expo' }
]
---

<ul class='flex flex-wrap gap-2'>
  {
    SKILLS.map(({ title }) => (
      <li class='cursor-default text-sm text-muted-foreground transition-colors duration-200 hover:text-foreground'>
        {title}
      </li>
    ))
  }
</ul>
